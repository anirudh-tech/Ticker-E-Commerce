<body class="bg-dark-100 text-gray-200">
    <header>
        <nav class="bg-dark-200 p-0">
            <div class="container mx-auto px-4 flex justify-between items-center">
                <div class="flex-shrink-0">
                    <a href="/homepage" class="block">
                        <img src="/images/screenshot--272-removebgpreview-1@2x.png" class="h-[70px]" alt="Logo">
                    </a>
                </div>

                <div class="hidden md:flex items-center">
                    <input id="searchInput" type="text" placeholder="Search"
                        class="bg-dark-300 border-gray-600 text-gray-200 rounded-l px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <button id="searchButton" type="button"
                        class="bg-blue-600 text-white px-4 py-2 rounded-r hover:bg-blue-700 transition duration-300">Search</button>
                </div>

                <!-- ... (keep the menu toggle button the same) ... -->

                <div class="hidden md:flex items-center space-x-4">
                    <a href="/homepage" class="text-gray-300 hover:text-white">Home</a>
                    <a href="/shop" class="text-gray-300 hover:text-white">Shop</a>
                    <a href="/wishlist" class="text-red-400 hover:text-red-300">
                        <i class="fa-solid fa-heart"></i>
                    </a>
                    <a href="/cart" class="text-blue-400 hover:text-blue-300">
                        <i class="fa-solid fa-cart-shopping"></i>
                    </a>

                    <% if (user) { %>
                        <div class="relative group">
                            <button id="userMenuButton" class="flex items-center text-gray-300 hover:text-white">
                                <%= user.Username %> <i class="fa-solid fa-user ml-1"></i>
                            </button>
                            <div
                                class="absolute right-0 w-48 mt-2 py-2 bg-dark-200 rounded-md shadow-xl z-20 hidden group-hover:block">
                                <a href="/profile"
                                    class="block px-4 py-2 text-sm text-gray-300 hover:bg-dark-300 hover:text-white">Profile</a>
                                <hr class="my-2 border-gray-600">
                                <a href="/logout" id="logoutLink"
                                    class="block px-4 py-2 text-sm text-gray-300 hover:bg-dark-300 hover:text-white">Logout</a>
                            </div>
                        </div>
                        <% } else { %>
                            <a href="/signup" class="text-gray-300 hover:text-white">
                                <i class="fa-solid fa-user"></i><span class="ml-1">Signup</span>
                            </a>
                            <% } %>
                </div>
            </div>

            <!-- Mobile menu (dark theme) -->
            <div id="mobileMenu" class="md:hidden hidden bg-dark-200">
                <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                    <a href="/homepage"
                        class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-dark-300">Home</a>
                    <a href="/shop"
                        class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-dark-300">Shop</a>
                    <a href="/wishlist"
                        class="block px-3 py-2 rounded-md text-base font-medium text-red-400 hover:text-red-300 hover:bg-dark-300">Wishlist</a>
                    <a href="/cart"
                        class="block px-3 py-2 rounded-md text-base font-medium text-blue-400 hover:text-blue-300 hover:bg-dark-300">Cart</a>
                    <% if (user) { %>
                        <a href="/profile"
                            class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-dark-300">Profile</a>
                        <a href="/logout" id="mobileLogoutLink"
                            class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-dark-300">Logout</a>
                        <% } else { %>
                            <a href="/signup"
                                class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-dark-300">Signup</a>
                            <% } %>
                </div>
            </div>
        </nav>
    </header>

    <section class="bg-gray-900">
        <!-- ... (keep the banner section the same) ... -->

        <div class="text-center bg-dark-200 py-8">
            <h5 class="text-lg font-bold mb-4 text-white">SHOP FOR</h5>
            <div class="container mx-auto">
                <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-4">
                    <% categories.forEach(function(category) { %>
                        <div class="flex flex-col items-center">
                            <a href="/category/<%= category._id %>" class="w-full aspect-square mb-2">
                                <img class="w-full h-full object-cover rounded-lg" src="/uploads/<%=category.image %>"
                                    alt="<%= category.Name %>">
                            </a>
                            <span class="text-sm text-gray-300">
                                <%=category.Name%>
                            </span>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>

        <div class="container mx-auto py-8">
            <h2 class="text-2xl font-bold text-center mb-6 text-white">New Arrivals</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                <% products.forEach(function(product) { %>
                    <div class="bg-gray-800 rounded-lg shadow-md overflow-hidden">
                        <img src="/uploads/<%= product.images[0] %>" class="w-full h-64 object-cover"
                            alt="<%= product.ProductName %>">
                        <div class="p-4 flex flex-col justify-between h-40">
                            <h6 class="text-lg font-semibold text-center mb-2 text-white">
                                <%= product.ProductName %>
                            </h6>
                            <div class="mt-auto">
                                <% if (product.AvailableQuantity===0) { %>
                                    <div class="bg-red-600 text-white text-center py-2 rounded">
                                        <p>Out of Stock</p>
                                    </div>
                                    <% } else { %>
                                        <p class="text-center mb-2 text-gray-300">Price â‚¹<%= product.Price %>
                                        </p>
                                        <a href="/product/<%= product._id %>"
                                            class="block w-full bg-blue-600 text-white text-center py-2 rounded hover:bg-blue-700 transition duration-300">View
                                            Details</a>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                    <% }); %>

                        <!-- Skeleton loaders (dark theme) -->
                        <% for (let i=0; i < 4; i++) { %>
                            <div class="bg-gray-800 rounded-lg shadow-md overflow-hidden animate-pulse">
                                <div class="w-full h-64 bg-gray-700"></div>
                                <div class="p-4 h-40">
                                    <div class="h-6 bg-gray-700 rounded w-3/4 mx-auto mb-2"></div>
                                    <div class="h-4 bg-gray-700 rounded w-1/2 mx-auto mb-2"></div>
                                    <div class="h-10 bg-gray-700 rounded w-full mt-auto"></div>
                                </div>
                            </div>
                            <% } %>
            </div>
        </div>
    </section>

    <style>
        .product-name {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>

