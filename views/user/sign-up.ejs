<body>
  <section class="min-h-screen bg-cover bg-center"
    style="background-image: url('/images/2838f609-7825-4b21-b96f-1e417782f414.jpeg');">
    <div class="container mx-auto pt-20 overflow-y-hidden">
      <div class="flex justify-center items-center">
        <div class="w-full max-w-lg">
          <div class="bg-white rounded-lg shadow-md mt-4 mb-3">
            <div class="p-6 text-black">
              <div class="text-center">
                <h1 class="text-3xl font-bold">SIGN UP</h1>
              </div>
              <form id="signupForm" class="mt-6" action="/signup" method="post">
                <% if (messages.error) { %>
                  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                    <%= messages.error %>
                  </div>
                  <% } %>
                    <div class="mb-4">
                      <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Name</label>
                      <input type="text"
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="name" name="Username" placeholder="Enter your name" required />
                    </div>
                    <div class="mb-4">
                      <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email Address</label>
                      <input type="email"
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="email" name="Email" placeholder="Enter your email address" required />
                    </div>
                    <div class="mb-4">
                      <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                      <div class="relative">
                        <input type="password"
                          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                          name="Password" id="password" placeholder="Enter your password" minlength="8" required />
                        <button class="absolute inset-y-0 right-0 flex items-center px-2" type="button"
                          id="showPasswordOne">
                          <i class="fas fa-eye"></i>
                        </button>
                      </div>
                    </div>
                    <div class="text-red-500" id="password-whitespace-msg"></div>
                    <p id="strength" class="text-sm text-gray-600">Strength:</p>
                    <div class="mb-4">
                      <label for="confirmPassword" class="block text-gray-700 text-sm font-bold mb-2">Confirm
                        Password</label>
                      <div class="relative">
                        <input type="password"
                          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                          id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required />
                        <button class="absolute inset-y-0 right-0 flex items-center px-2" type="button"
                          id="showPasswordTwo">
                          <i class="fas fa-eye"></i>
                        </button>
                      </div>
                    </div>
                    <div class="text-center mt-6">
                      <button type="submit"
                        class="w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Sign up
                      </button>
                    </div>
              </form>
              <div class="mt-4">
                <p class="text-center">or</p>
              </div>
              <div class="mt-4 text-center">
                <p class="text-center">
                  Already have an account? <a href="/login" class="text-blue-500 hover:text-blue-700">Sign In</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%- include('../layouts/footer') %>